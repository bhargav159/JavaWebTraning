package com.ibm.arrays;

public class Application
{
	public static void main( String[] args )
	{
		
		Integer numbers[];
		
		numbers = new Integer[5];
		
		System.out.println(numbers.length);
		
		numbers[2] = 4;
		
		for(int num:numbers) {
			System.out.println(num);
		}
		
		
	}
}